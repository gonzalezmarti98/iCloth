<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <!-- 1. Círculo de fondo que actuará como BORDE -->
    <!-- Es 2dp más grande que el círculo de color y es negro -->
    <View
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/shape_color_dot_unselected"
        app:tint="#212121" /> <!-- Usamos tint para forzar el color negro -->

    <!-- 2. Círculo de color principal -->
    <!-- Es más pequeño (46dp) y se coloca en el centro -->
    <View
        android:id="@+id/colorDot"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:background="@drawable/shape_color_dot_unselected" />

    <!-- 3. El 'tick' de selección (se mantiene igual) -->
    <ImageView
        android:id="@+id/ivSelectionTick"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_check_black"
        android:visibility="gone" />

</FrameLayout>
