<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"

    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <!-- Ponemos el background AQUÍ, en el LinearLayout principal -->
    <!-- Esto asegura que el fondo siga al contenido -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="685dp"
        android:orientation="vertical"
        android:background="@drawable/dialog_background"
        android:padding="45dp">

        <!-- Usamos un ScrollView INTERNO para el contenido que puede crecer -->
        <!-- Esto es importante: si la descripción es muy larga, scrollea DENTRO del dialogo,
             pero el fondo se mantiene estático en el marco del layout -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Imagen grande de la prenda -->
                <ImageView
                    android:id="@+id/ivDetalleImagen"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginBottom="25dp"
                    android:background="#EEE"
                    android:scaleType="centerCrop" />

                <!-- Título / nombre de la prenda -->
                <!--
                <TextView
                    android:id="@+id/tvDetalleNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre Prenda"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>
                    -->

                <TextView
                    android:id="@+id/tvId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:text="Id" />

                <TextView
                    android:id="@+id/tvDetalleCategoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:text="Categoría" />

                <TextView
                    android:id="@+id/tvColorPpal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:text="Color" />

                <TextView
                    android:id="@+id/tvColorSec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:text="Color sec" />

                <TextView
                    android:id="@+id/tvEstampado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:text="Estampado" />

                <TextView
                    android:id="@+id/tvAjuste"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:text="Ajuste" />

                <TextView
                    android:id="@+id/tvMarca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:text="Marca" />

                <TextView
                    android:id="@+id/tvFormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:text="Formalidad 1-10" />

                <TextView
                    android:id="@+id/tvDeportivo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:text="Deportivo 1-10" />

                <TextView
                    android:id="@+id/tvTemporada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:text="Temporada" />


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.cardview.widget.CardView>
