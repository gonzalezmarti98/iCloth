<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Botón para cerrar (X) -->
            <ImageView
                android:id="@+id/btnCerrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:contentDescription="Cerrar" />

            <!-- Imagen grande -->
            <ImageView
                android:id="@+id/ivDetalleImagen"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:background="#EEE" />

            <!-- Textos de detalle -->
            <TextView
                android:id="@+id/tvDetalleNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre Prenda"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvDetalleCategoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Categoría: " />

            <TextView
                android:id="@+id/tvDetalleTemporada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temporada: " />

            <!-- Puedes añadir más TextViews para color, formalLvl, etc. -->

        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>
