<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <!-- 1. AVATAR DEL USUARIO (A la derecha) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardUserAvatar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        android:backgroundTint="#59A8D4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Icono genÃ©rico de usuario -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="6dp"
            android:src="@android:drawable/ic_menu_my_calendar"
            app:tint="@color/white" />
        <!-- he usado ic_menu_my_calendar pq a veces los iconos de usuario de sistema son feos,
             pero visualmente queda como un avatar redondo azul -->
    </androidx.cardview.widget.CardView>

    <!-- 2. GLOBO DE MENSAJE -->
    <!-- Alineado a la derecha del tdo, pegado al avatar -->
    <TextView
        android:id="@+id/tvUserMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/png_dialog_background_v2"
        android:backgroundTint="#4059A8D4"
        android:fontFamily="@font/inter_light"
        android:padding="12dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@+id/cardUserAvatar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
